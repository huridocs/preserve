{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest","node"],
    "moduleResolution": "node",
    "incremental": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
