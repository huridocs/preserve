{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "/*": [ "/*" ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
